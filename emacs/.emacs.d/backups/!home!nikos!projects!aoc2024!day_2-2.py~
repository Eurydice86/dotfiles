import read_input

inp = read_input.read_file("dummy.txt")


def is_safe(report) -> bool:
    levels = report.split(" ")
    levels = [int(l) for l in levels]

    diffs = []
    for i in range(len(levels) - 1):
        diffs.append(levels[i + 1] - levels[i])

    for d in diffs:
        if d == 0 or abs(d) > 3:
            return False

    if sorted(levels) != levels and sorted(levels, reverse=True) != levels:
        return False

    return True

def check_all_subreports(report):
    print(report)
    for i in range(len(report)):
        subreport = report.pop(i)
        print(subreport)

count = 0
for i in inp:
    if is_safe(i):
        count += 1
    else:
        check_all_subreports(i)
print(count)


if __name__ == "__main__":
    check_all_subreports("1 3 2 4 5")
